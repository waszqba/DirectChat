<Window x:Class="DirectChat.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DirectChat"
        xmlns:system="clr-namespace:System;assembly=System.Runtime"
        mc:Ignorable="d"
        Closing="SetupWindow_OnClosing"
        Title="SetupWindow" Height="175" Width="250">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Direct Chat"
                   HorizontalAlignment="Center"
                   FontSize="20" FontWeight="Bold"/>
            <Label Content="Zdefiniuj port nasłuchu"
                   HorizontalAlignment="Center"
                   FontSize="14"/>
            <TextBox Name="portBox"
                     HorizontalAlignment="Center"
                     Margin="5" Width="150"/>
            <Button Margin="5"
                    Content="Start"
                    Click="Btn_Click"/>
        </StackPanel>

    </Grid>
</Window>
